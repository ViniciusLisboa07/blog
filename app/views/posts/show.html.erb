<p style="color: green"><%= notice %></p>

<div class="ui container">
  <div class="content">
    <div class="header">
      <h1>
        <%= @post.tittle %>
      </h1>
      <p class="ui label">
        <%= time_tag @post.created_at, "data-local": "time-ago"%>
      </p>
    </div>

    <div>
      <div>
        <p>
          <%= @post.content %>
        </p>
      </div>
    </div>
  </div>

  <div class="content">
    <%= link_to "Back to posts", posts_path %>
  </div>

  <%= render "posts/comments", post: @post %>
</div>
